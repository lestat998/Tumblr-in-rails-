#page_wrapper
	%h2 Sign up
	= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
		= f.error_notification
		.form-inputs
			= f.label :email
			= f.input :email, label: false, required: true, autofocus: true
			%br
			= f.label :password
			= f.input :password, label: false, required: true, hint: (" #{@minimum_password_length} characters minimum" if @minimum_password_length)
			%br
			= f.label :pasword_confirmation 
			= f.input :password_confirmation, required: true, label:false
		.form-actions
		%br
			= f.button :submit, "Sign up"
	= render "devise/shared/links"
