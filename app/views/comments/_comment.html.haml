%div{ :class => "comment clearfix" }
	.comment_content
		%p{ :class => "comment_name"}= comment.name
		%p{ :class => "comment_body"}= comment.body
		%p{ :class => "comment_title"} #{ time_ago_in_words(comment.created_at) } Ago

		%p=link_to 'Delete', [comment.post, comment], method: :delete, date: { confirm: 'Are you sure' }
