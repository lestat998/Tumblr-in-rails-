#post_content
	%h1{ :class => "title" }= @post.title

	%p{ :class => "date" } Submitted #{ time_ago_in_words(@post.created_at) } ago | #{ link_to 'Edit', edit_post_path(@post) } | #{ link_to 'Delete', post_path(@post), method: :delete, date: { confirm: 'Are you sure'} }


	%p{ :class => "body" }= @post.body

	#comments
		%h2 #{ @post.comments.count } Comments
		= render @post.comments
		%h3 Join Discussion:
		= render "comments/form"